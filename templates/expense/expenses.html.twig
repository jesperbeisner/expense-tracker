{% extends 'base.html.twig' %}

{% block title %}Expenses - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>
                            Expenses
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if expenses is empty %}
                            <p class="text-center text-danger">No expenses available yet</p>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover text-center">
                                    <thead>
                                    <tr>
                                        <th scope="col" style="width: 10%">#</th>
                                        <th scope="col" style="width: 15%">Amount</th>
                                        <th scope="col" style="width: 15%">Category</th>
                                        <th scope="col" style="width: 10%">Due Date</th>
                                        <th scope="col" style="width: 50%">Note</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set i = 1 %}
                                    {% for expense in expenses %}
                                        <tr>
                                            <th scope="row" style="width: 10%">{{ i }}</th>
                                            <td style="width: 10%">{{ expense.amount|amount }}</td>
                                            <td style="width: 10%">{{ expense.category.name ?? '-' }}</td>
                                            <td style="width: 10%">{{ expense.dueDate|date('d.m.Y') }}</td>
                                            <td style="width: 60%">{{ expense.note ?? '-' }}</td>
                                        </tr>
                                        {% set i = i + 1 %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
