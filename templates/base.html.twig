<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% trans %}title{% endtrans %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}" sizes="16x16">

    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
    {% endblock %}

    {% block javascript_start %}{% endblock %}
</head>
<body>

{% if app.user is not null %}
    {% include 'layout/navigation.html.twig' %}
{% endif %}

{% if app.user is not null %}
    {% include 'layout/flash.html.twig' %}
{% endif %}

<main>
    {% block body %}{% endblock %}
</main>

<footer class="mt-5">
    <div class="container">
        <p class="text-center">
            <a class="text-decoration-none commit-link" href="https://github.com/jesperbeisner/expense-tracker/tree/{{ git_info() }}">
                {{ git_info() }}
            </a>
        </p>
    </div>
</footer>

{% block javascript_end %}
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
</body>
</html>
