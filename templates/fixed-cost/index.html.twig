{% extends 'base.html.twig' %}

{% block title %}{% trans %}navigation.fixed_costs{% endtrans %} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>
                                    {% trans %}template.fixed_cost.index.fixed_costs{% endtrans %}: {{ amount|amount }}
                                </h5>
                            </div>
                            <div class="col-md-6 text-end">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#fixed-cost-modal">
                                    {% trans %}template.fixed_cost.index.add.fixed_costs{% endtrans %}
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if fixedCosts|length == 0 %}
                            <p class="text-center text-danger">
                                {% trans %}template.fixed_cost.index.no.fixed_costs.available{% endtrans %}
                            </p>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover text-center">
                                    <thead>
                                    <tr>
                                        <th scope="col" style="width: 10%">#</th>
                                        <th scope="col" style="width: 10%">
                                            {% trans %}template.fixed_cost.index.amount{% endtrans %}
                                        </th>
                                        <th scope="col" style="width: 20%">
                                            {% trans %}template.fixed_cost.index.category{% endtrans %}
                                        </th>
                                        <th scope="col" style="width: 64%">
                                            {% trans %}template.fixed_cost.index.note{% endtrans %}
                                        </th>
                                        <th scope="col" style="width: 3%"></th>
                                        <th scope="col" style="width: 3%"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set i = 1 %}
                                    {% for fixedCost in fixedCosts %}
                                        <tr>
                                            <th scope="row">{{ i }}</th>
                                            <td>{{ fixedCost.amount|amount }}</td>
                                            <td>{{ fixedCost.category.name ?? '-' }}</td>
                                            <td>{{ fixedCost.note ?? '-' }}</td>
                                            <td>
                                                <a href="{{ path('app_fixed_costs_edit', {'id': fixedCost.id}) }}" class="text-decoration-none">
                                                    <i title="{% trans %}template.fixed_cost.index.edit{% endtrans %}">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-gear-fill edit-icon" viewBox="0 0 16 16">
                                                            <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
                                                        </svg>
                                                    </i>
                                                </a>
                                            </td>
                                            <td>
                                                <i title="{% trans %}template.fixed_cost.index.delete{% endtrans %}">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" data-bs-toggle="modal" data-bs-target="#delete-modal" data-fixed-cost-id="{{ fixedCost.id }}" fill="currentColor" class="bi bi-trash-fill delete-icon" viewBox="0 0 16 16">
                                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                                    </svg>
                                                </i>
                                            </td>
                                        </tr>
                                        {% set i = i + 1 %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="fixed-cost-modal" tabindex="-1" aria-labelledby="fixed-cost-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                {{ form_start(form) }}
                <div class="modal-header">
                    <h5 class="modal-title" id="fixed-cost-modal-label">
                        {% trans %}template.fixed_cost.index.add.fixed_costs{% endtrans %}
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.amount) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(form.category) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(form.note) }}
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {% trans %}template.fixed_cost.index.close{% endtrans %}
                    </button>
                    {{ form_row(form.save) }}
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="delete-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delete-modal-label">
                        {% trans %}template.fixed_cost.index.delete.fixed_cost{% endtrans %}
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center text-danger fw-bold">
                    {% trans %}template.fixed_cost.index.delete.fixed_cost.info{% endtrans %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {% trans %}template.fixed_cost.index.close{% endtrans %}
                    </button>
                    <form id="delete-form" method="POST">
                        <button type="submit" class="btn btn-danger">
                            {% trans %}template.fixed_cost.index.delete{% endtrans %}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript_end %}
    {{ parent() }}
    <script>
      const DeleteUrl = "{{ path('app_fixed_costs_delete', {'id': 9999999}) }}";
      const DeleteModal = document.querySelector('#delete-modal');

      DeleteModal.addEventListener('show.bs.modal', (event) => {
        const DeleteButton = event.relatedTarget;
        const FixedCostId = DeleteButton.dataset.fixedCostId;
        const FormAction = DeleteUrl.replace("9999999", FixedCostId);
        const DeleteForm = document.querySelector('#delete-form');

        DeleteForm.action = FormAction;
      })
    </script>
{% endblock %}
