{% extends 'base.html.twig' %}

{% block title %}{% trans %}navigation.categories{% endtrans %} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>
                            {% trans %}template.category.index.add.category{% endtrans %}
                        </h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.name) }}
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                {{ form_row(form.save) }}
                            </div>
                        </div>

                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>
                            {% trans %}template.category.index.categories{% endtrans %}
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if categories is empty %}
                            <p class="text-center text-danger">
                                {% trans %}template.category.index.no.categories.available{% endtrans %}
                            </p>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th scope="col" style="width: 10%">#</th>
                                        <th scope="col" style="width: 84%">Name</th>
                                        <th scope="col" style="width: 3%"></th>
                                        <th scope="col" style="width: 3%"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set i = 1 %}
                                    {% for category in categories %}
                                        <tr>
                                            <th scope="row">{{ i }}</th>
                                            <td>{{ category.name }}</td>
                                            <td class="text-center">
                                                <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="text-decoration-none">
                                                    <i title="{% trans %}template.expense.index.edit.expense{% endtrans %}">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-gear-fill edit-icon" viewBox="0 0 16 16">
                                                            <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
                                                        </svg>
                                                    </i>
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                <i title="{% trans %}template.expense.index.delete.expense{% endtrans %}">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" data-bs-toggle="modal" data-bs-target="#delete-modal" data-category-id="{{ category.id }}" fill="currentColor" class="bi bi-trash-fill delete-icon" viewBox="0 0 16 16">
                                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                                    </svg>
                                                </i>
                                            </td>
                                        </tr>
                                        {% set i = i + 1 %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="delete-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delete-modal-label">
                        Kategorie löschen
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center text-danger fw-bold">
                    Die Löschung kann nicht rückgängig gemacht werden.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Schließen
                    </button>
                    <form id="delete-form" method="POST">
                        <button type="submit" class="btn btn-danger">
                            Löschen
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript_end %}
    {{ parent() }}
    <script>
      const DeleteUrl = "{{ path('app_categories_delete', {'id': 9999999}) }}";
      const DeleteModal = document.querySelector('#delete-modal');

      DeleteModal.addEventListener('show.bs.modal', (event) => {
        const DeleteButton = event.relatedTarget;
        const CategoryId = DeleteButton.dataset.categoryId;
        const FormAction = DeleteUrl.replace("9999999", CategoryId);
        const DeleteForm = document.querySelector('#delete-form');

        DeleteForm.action = FormAction;
      })
    </script>
{% endblock %}